[beets]
directory: /var/music
library: ~/.beetslibrary
import_copy: yes
import_delete: yes
#plugins: chroma lyrics embedart scrub rewrite
#plugins:  embedart rewrite lyrics
plugins: embedart rewrite scrub
#plugins: embedart rewrite hardrewrite

[paths]
default: $albumartist/($year) $album/$track $title
singleton: Singles/$artist/$title
comp: Compilations/($year) $album/$track title

#[rewrite]
#artist Alice .n Chains: Alice in Chains

[hardrewrite]
artist andrew bird.*: Andrew Bird
artist .*bob seger.*: Bob Seger
artist bob marley.*: Bob Marley
artist chicago.*: Chicago
artist ian anderson: Jethro Tull
artist .*jimi hendrix.*: Jimi Hendrix
artist merle haggard.*: Merle Haggard
artist .*reverend horton.*: The Reverend Horton Heat
artist sublime.*: Sublime
artist .*wesley willis.*: Wesley Willis

# Don't have any actual CSNY yet, just Neil Young:Decade.
# This will have to change if I ever do get any.
artist neil young.*: Neil Young
artist .*stills-young.*: Neil Young
artist crosby, stills.*: Neil Young

[lyrics]
autofetch: no

