[ui]
username = Jacob Courtneay <jacob@sporkexec.com>
editor = vim

[alias]
br = branch
slog = log --style=$HOME/.hgtemplates/map-cmdline.slog
nlog = log --style=$HOME/.hgtemplates/map-cmdline.nlog
clog = glog --style=$HOME/.hgtemplates/map-cmdline.sglog


[extensions]
pager =
parentrevspec =
progress =
color =
fetch = 
children =
graphlog =
churn =
hgk =

[pager]
; hg output is a special case for terminal escapes, although we may reverse this eventually.
pager = VIMPAGER_COMMAND=AnsiEsc ~/bin/less
attend = annotate, cat, diff, export, glog, log, qdiff, clog, slog, nlog

[progress]
delay = 0
refresh = 0.1
clear-complete = False

[color]
status.modified = magenta bold
status.added = green bold
status.removed = red bold
status.deleted = cyan bold
status.unknown = blue bold
status.ignored = black bold
